<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <screen name="main">
        <section>
            <actions>
                <set field="headerItem" value="main"/><!-- this highlights the selected menu-item with name "main" -->
            </actions>
            <widgets>
                <decorator-screen name="SandboxCommonDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
    <screen name="ajax">
        <section>
            <actions>
                <set field="headerItem" value="main"/><!-- this highlights the selected menu-item with name "main" -->
            </actions>
            <widgets>
                <decorator-screen name="SandboxCommonDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <platform-specific>
                            <html><html-template location="component://sandbox/webapp/sandbox/ajax/main.ftl"/></html>
                        </platform-specific>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
    <screen name="pmInfo">
        <section>
            <actions>
                <set field="headerItem" value="main"/><!-- this highlights the selected menu-item with name "main" -->
                <script location="component://sandbox/webapp/sandbox/WEB-INF/actions/pmInfo.groovy"/>
            </actions>
            <widgets>
                <platform-specific>
                    <html><html-template location="component://sandbox/webapp/sandbox/general/pmInfo.ftl"/></html>
                </platform-specific>
            </widgets>
        </section>
    </screen>
    
    <screen name="activeUserLoginId">
        <section>
            <actions>
                <set field="headerItem" value="main"/><!-- this highlights the selected menu-item with name "main" -->
                <script location="component://sandbox/webapp/sandbox/WEB-INF/actions/activeUserLoginId.groovy"/>
            </actions>
            <widgets>
                <platform-specific>
                    <html><html-template location="component://sandbox/webapp/sandbox/general/activeUserLoginId.ftl"/></html>
                </platform-specific>
            </widgets>
        </section>
    </screen>


</screens>
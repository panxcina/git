<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
    <description>bellyanna Services</description>
    <vendor></vendor>
    <version>1.0</version>

    <service name="freeProductFacilityLocation" auth="true" engine="java" transaction-timeout="6000"
        location="com.bellyanna.facility.facilityService" invoke="freeProductFacilityLocation">
        <description>Free Product Facility Location with ATP and QOH 0</description>
        <attribute name="userLogin" type="String" mode="IN" optional="true"/>
        <attribute name="facilityId" type="String" mode="IN" optional="false"/>
    </service>
    
    <service name="adjustProductFacilityLocation" auth="true" engine="java" transaction-timeout="6000"
        location="com.bellyanna.facility.facilityService" invoke="adjustProductFacilityLocation">
        <description>Adjust Product Facility Location</description>
        <attribute name="facilityId" type="String" mode="IN" optional="false"/>
        <attribute name="productId" type="String" mode="IN" optional="false"/>
        <attribute name="locationSeqId" type="String" mode="IN" optional="false"/>
        <attribute name="minimumStock" type="String" mode="IN" optional="true"/>
        <attribute name="moveQuantity" type="String" mode="IN" optional="true"/>
        <attribute name="userLogin" type="String" mode="IN" optional="true"/>
    </service>
    
</services>

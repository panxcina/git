        <field name="submitButton" title="${uiLabelMap.CommonUpdate}" use-when="productStoreEbaySetting!=null" widget-style="smallSubmit"><submit button-type="button"/></field>
        <field name="submitButton" title="${uiLabelMap.CommonCreate}" use-when="productStoreEbaySetting==null" widget-style="smallSubmit"><submit button-type="button"/></field>
    </form>
    
    <form name="productEbayActiveListing" type="single" target="productEbayActiveListing" header-row-style="header-row" default-table-style="basic-table">
        <field name="productId"><display/></field>
        <field name="productStoreId" title="${uiLabelMap.ProductStoreId}">
            <drop-down no-current-selected-key="All">
                <option key="All" description="All"/>
                <entity-options entity-name="ProductStore" description="${subtitle} (${productStoreId})">
                    <entity-constraint name="primaryStoreGroupId" value="EBAY"/>
                    <entity-order-by field-name="subtitle"/>
                </entity-options>
            </drop-down>
        </field>
        <field name="soldInLastXdays" title="Sold in last X days"><text size="3" maxlength="5" default-value="30"/></field>
        <field name="submitButton" title="Search" widget-style="smallSubmit"><submit button-type="button"/></field>
    </form>
    
    <form name="productStoreEbayActiveListing" type="single" target="productStoreEbayActiveListing" header-row-style="header-row" default-table-style="basic-table">
        <field name="productStoreId"><display/></field>
        <field name="listingType" title="Listing Type">
            <drop-down no-current-selected-key="All">
                <option key="All" description="All"/>
                <option key="Chinese" description="Auction"/>
                <option key="FixedPriceItem" description="Buy It Now (BIN)"/>
                <option key="StoresFixedPrice" description="Store"/>
            </drop-down>
        </field>
        <field name="soldInLastXdays" title="Sold in last X days"><text size="3" maxlength="5" default-value="30"/></field>
        <field name="submitButton" title="Search" widget-style="smallSubmit"><submit button-type="button"/></field>
    </form>
</forms>


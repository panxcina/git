        <field name="autoUpdateEbayQuantity" title="Auto Update Ebay Quantity"><text size="1" maxlength="1"/></field>
        <field name="defaultEbayMinQty" title="Default eBay Minimum Qty"><text size="2" maxlength="2"/></field>

<forms xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-form.xsd">
    <form name="ProductSearchList" type="single" target="productSearchList" header-row-style="header-row" default-table-style="basic-table">
        <field name="productId" title="${uiLabelMap.ProductProductId}"><text size="30" maxlength="50"/></field>
        <field name="soldInLastXdays" title="Sold in last X days"><text size="3" maxlength="5" default-value="30"/></field>
        <field name="submitButton" title="Search" widget-style="smallSubmit"><submit button-type="button"/></field>
    </form>
    <form name="AddProductEbaySetting" type="single" target="createProductEbaySetting" title="Product eBay setting"
        header-row-style="header-row" default-table-style="basic-table">
        <auto-fields-entity entity-name="ProductEbaySetting"/>
        <field name="productId"><hidden/></field>
        <field name="productStoreId" title="${uiLabelMap.ProductStoreId}">
            <drop-down>
                <entity-options entity-name="ProductStore" description="${subtitle} (${productStoreId})">
                    <entity-order-by field-name="subtitle"/>
                </entity-options>
            </drop-down>
        </field>
        <field name="updateQuantity" title="Update Quantity"></field>
        <field name="listQuantity" title="List Quantity" ></field>
        <field name="minQuantity" title="Min Quantity to trigger update"></field>
        <field name="submitButton" title="${uiLabelMap.CommonAdd}" widget-style="smallSubmit"><submit button-type="button"/></field>
    </form>
    <form name="UpdateProductEbaySetting" type="list" target="updateProductEbaySetting" title="" list-name="productEbaySettings"
        odd-row-style="alternate-row" default-table-style="basic-table">
        <auto-fields-service service-name="updateProductEbaySetting"/>
        <field name="productId"><hidden/></field>
        <field name="productStoreId"><display/></field>
        <!--<field name="updateQuantity"><display/></field>
        <field name="listQuantity"><display/></field>
        <field name="minQuantity"><display/></field>-->
        <field name="submitButton" title="${uiLabelMap.CommonUpdate}"><submit button-type="button"/></field>
        <field name="deleteLink" title="${uiLabelMap.CommonEmptyHeader}" widget-style="buttontext">
            <hyperlink target="deleteProductEbaySetting" description="${uiLabelMap.CommonDelete}" also-hidden="false">
                <parameter param-name="productId"/><parameter param-name="productStoreId"/>
            </hyperlink>
        </field>
    </form>
    <form name="AddProductStoreEbaySetting" type="single" target="createProductStoreEbaySetting" title="Product Store eBay setting"
        header-row-style="header-row" default-table-style="basic-table">
        <auto-fields-entity entity-name="ProductStoreEbaySetting"/>
        <!--<field name="productId"><hidden/></field>
        <field name="productStoreId" title="${uiLabelMap.ProductStoreId}">
            <drop-down>
                <entity-options entity-name="ProductStore" description="${subtitle} (${productStoreId})">
                    <entity-order-by field-name="subtitle"/>
                </entity-options>
            </drop-down>
        </field>
        <field name="updateQuantity" title="Update Quantity"></field>
        <field name="listQuantity" title="List Quantity" ></field>
        <field name="minQuantity" title="Min Quantity to trigger update"></field>-->
        <field name="submitButton" title="${uiLabelMap.CommonAdd}" widget-style="smallSubmit"><submit button-type="button"/></field>
    </form>
    <form name="UpdateProductStoreEbaySetting" type="single" target="updateProductStoreEbaySetting" title="" list-name="productStoreEbaySettings"
        odd-row-style="alternate-row" default-table-style="basic-table">
        <auto-fields-service service-name="updateProductStoreEbaySetting"/>
        <auto-fields-entity entity-name="ProductStoreEbaySetting"/>
        <!--<field name="productStoreId"><display/></field>
        <field name="autoImportEbayApi"></field>
        <field name="importUpdateShipmentStatus"></field>
        <field name="packUpdateShipmentStatus"></field>
        <field name="daysAskFeedback"></field>
        <field name="daysNotShipped"></field>
        <field name="sendOutOfStockEmail"></field>

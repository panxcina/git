        <field name="submitButton" title="${uiLabelMap.CommonUpdate}"><submit button-type="button"/></field>
        <field name="deleteLink" title="${uiLabelMap.CommonEmptyHeader}" widget-style="buttontext">
            <hyperlink target="deleteProductStoreEbaySetting" description="${uiLabelMap.CommonDelete}" also-hidden="false">
                <parameter param-name="productStoreId"/>
            </hyperlink>
        </field>
    </form>
    
    <form name="editProductStoreEbaySetting" type="single" target="editProductStoreEbaySetting" title="" default-map-name="productStoreEbaySetting"
        header-row-style="header-row" default-table-style="basic-table">
        
        <alt-target use-when="productStoreEbaySetting==null" target="createProductStoreEbaySetting"/>
        <auto-fields-entity entity-name="ProductStoreEbaySetting"/>
        <field name="productStoreId" title="${uiLabelMap.ProductStoreId}"><display/></field>
        
        <!--<field name="autoImportEbayApi" title="Auto import eBay API"><text size="1" maxlength="1"/></field>
        <field name="importUpdateShipmentStatus" title="Update eBay Shipment Status after imported"><text size="1" maxlength="1"/></field>
        <field name="packUpdateShipmentStatus" title="Update eBay Shipment Status after order is packed"><text size="1" maxlength="1"/></field>
        <field name="daysAskFeedback" title="Days Ask Feedback"><text size="2" maxlength="2"/></field>

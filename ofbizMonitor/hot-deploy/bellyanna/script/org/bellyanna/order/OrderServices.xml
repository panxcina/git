<simple-methods xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/simple-methods.xsd">
    <simple-method method-name="createOrderRefund" short-description="Create Order Refund">
        <make-value entity-name="Refund" value-field="newEntity"/>
        <set-nonpk-fields map="parameters" value-field="newEntity"/>
        <sequenced-id sequence-name="Refund" field="newEntity.refundId"/>
        <field-to-result field="newEntity.refundId" result-name="refundId"/>
        <now-timestamp field="newEntity.createdStamp"/>
        <set from-field="userLogin.userLoginId" field="newEntity.createdByUserLogin"/>
        <!--<set field="newEntity.statusId" value="REFUND_PENDING"/>-->
        <create-value value-field="newEntity"/>
    </simple-method>
    
    <simple-method method-name="updateOrderRefund" short-description="Update Order Refund">
        <entity-one entity-name="Refund" value-field="lookedUpValue"/>
        <set-nonpk-fields map="parameters" value-field="lookedUpValue"/>
        <store-value value-field="lookedUpValue"/>
        <!--<log message="Email is ${parameters.paypalEmailAddress}" level="error"/>-->
    </simple-method>
    
</simple-methods>
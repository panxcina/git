<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
    <description>Importation Services</description>
    <vendor></vendor>
    <version>1.0</version>

    <!-- Order Import -->
    <service name="createOrderImport" default-entity-name="OrderImport" engine="simple"
        location="component://import/script/org/ofbiz/orderimport/OrderImportServices.xml" invoke="createOrderImport" auth="true">
        <auto-attributes include="pk" mode="IN" optional="false"/>
        <auto-attributes include="nonpk" mode="IN" optional="true"/>
    </service>
    <service name="updateOrderImport" default-entity-name="OrderImport" engine="simple"
        location="component://import/script/org/ofbiz/orderimport/OrderImportServices.xml" invoke="updateOrderImport" auth="true">
        <auto-attributes include="pk" mode="INOUT" optional="false"/>
        <auto-attributes include="nonpk" mode="IN" optional="true"/>
        <attribute name="productStoreId" mode="INOUT" optional="true" type="String"/>
    </service>
    <service name="deleteOrderImport" default-entity-name="OrderImport" engine="simple"
        location="component://import/script/org/ofbiz/orderimport/OrderImportServices.xml" invoke="deleteOrderImport" auth="true">
        <auto-attributes include="pk" mode="IN" optional="false"/>
    </service>
    
    <service name="importMultiOrders" engine="simple"
        location="component://import/script/org/ofbiz/orderimport/OrderImportServices.xml" invoke="importMultiOrders" auth="true" use-transaction="false">
        <description>Import multiple orders from temporary entity to OFBiz</description>
        <attribute name="productStoreId" mode="INOUT" type="String" optional="false"/>
        <attribute name="fileName" mode="INOUT" type="String" optional="false"/>
    </service>
    
    <service name="uploadOrderCsvFile" engine="java"
        location="org.ofbiz.orderimport.OrderImportServices" invoke="uploadOrderCsvFile" auth="true">
        <implements service="uploadFileInterface"/>
        <attribute name="productStoreId" mode="IN" optional="false" type="String"></attribute>
        <attribute name="csvType" mode="IN" optional="false" type="String"></attribute>
    </service>
    <service name="createOrderItemImport" default-entity-name="OrderItemImport" engine="simple"
        location="component://import/script/org/ofbiz/orderimport/OrderImportServices.xml" invoke="createOrderItemImport" auth="true" >
        <attribute name="orderImportId" mode="IN" optional="false" type="String"></attribute>
        <attribute name="orderItemImportSeqId" mode="IN" optional="true" type="String"></attribute>
        <auto-attributes include="nonpk" mode="IN" optional="true"/>
    </service>
    <service name="importNewOrderFromCsv" engine="simple"
    	location="component://import/script/org/ofbiz/orderimport/OrderImportServices.xml" invoke="importNewOrderFromCsv" auth="true" >
        <attribute name="orderImportId" mode="IN" optional="false" type="String"></attribute>
        <attribute name="productStoreId" mode="IN" optional="false" type="String"></attribute>
        <attribute name="fileName" mode="IN" optional="true" type="String"></attribute>
    </service>
    <service name="updateOrderItemImport" default-entity-name="OrderItemImport" engine="simple"
        location="component://import/script/org/ofbiz/orderimport/OrderImportServices.xml" invoke="updateOrderItemImport">
        <auto-attributes include="pk" mode="IN" optional="false"></auto-attributes>
        <auto-attributes include="nonpk" mode="IN" optional="true"></auto-attributes>
    </service>
    <service name="importMultipleOrders" engine="simple"
        location="component://import/script/org/ofbiz/orderimport/OrderImportServices.xml" invoke="importMultipleOrders" auth="true" use-transaction="false">
        <attribute name="orderImportId" mode="IN" optional="false" type="String"></attribute>
        <attribute name="productStoreId" mode="INOUT" optional="false" type="String"></attribute>
        <attribute name="fileName" mode="INOUT" optional="false" type="String"></attribute>
    </service>
    <service name="deleteFileOrderImport" engine="java"
        location="org.ofbiz.orderimport.OrderImportServices" invoke="deleteFileOrderImport" auth="true">
        <attribute name="productStoreId" mode="INOUT" optional="false" type="String"></attribute>
        <attribute name="fileName" mode="IN" optional="false" type="String"></attribute>
    </service>
    <service name="deleteFileOrderImportBulk" engine="java"
        location="org.ofbiz.orderimport.OrderImportServices" invoke="deleteFileOrderImportBulk" auth="true" require-new-transaction="false">
        <attribute name="userLogin" type="String" mode="IN" optional="true"/>
    </service>
    
    <service name="doDeleteOrderImportAndFile" engine="java"
        location="org.ofbiz.orderimport.OrderImportServices" invoke="doDeleteOrderImportAndFile" auth="true">
        <attribute name="filePath" mode="IN" optional="false" type="String"></attribute>
    </service>
    <service name="createProductStoreShippingEnum" engine="simple"
        location="component://import/script/org/ofbiz/orderimport/OrderImportServices.xml" invoke="createProductStoreShippingEnum" auth="true" use-transaction="false">
        <attribute name="enumCode" mode="IN" optional="false" type="String"></attribute>
        <attribute name="enumTypeId" mode="IN" optional="false" type="String"></attribute>
        <attribute name="description" mode="IN" optional="true" type="String"></attribute>
        <attribute name="sequenceId" mode="IN" optional="true" type="String"></attribute>
    </service>
    <service name="updateProductStoreShippingEnum" engine="simple"
        location="component://import/script/org/ofbiz/orderimport/OrderImportServices.xml" invoke="updateProductStoreShippingEnum" auth="true" use-transaction="false">
        <attribute name="enumId" mode="IN" type="String" optional="false"></attribute>
        <attribute name="enumCode" mode="IN" optional="false" type="String"></attribute>
        <attribute name="enumTypeId" mode="IN" optional="false" type="String"></attribute>
        <attribute name="description" mode="IN" optional="true" type="String"></attribute>
        <attribute name="sequenceId" mode="IN" optional="true" type="String"></attribute>
    </service>
    <service name="addNewPaymentMethodMapping" engine="simple"
        location="component://import/script/org/ofbiz/orderimport/OrderImportServices.xml" invoke="addNewPaymentMethodMapping" auth="true" use-transaction="false">
        <attribute name="paymentMethodTypeId" mode="IN" optional="false" type="String"></attribute>
        <attribute name="externalPaymentMethod" mode="IN" optional="false" type="String"></attribute>
        <attribute name="enumTypeId" mode="IN" optional="false" type="String"></attribute>
        <attribute name="description" mode="IN" optional="false" type="String"></attribute>
    </service>
    <service name="reserveInventoryApprovedOrder" engine="simple"
        location="component://import/script/org/ofbiz/orderimport/OrderImportServices.xml" invoke="reserveInventoryApprovedOrder">
        <description>Reserve Inventory when order approved</description>
        <attribute name="orderId" type="String" mode="IN" optional="false"></attribute>
    </service>
    <service name="reserveStoreInventoryApprovedOrder" engine="simple"
        location="component://import/script/org/ofbiz/orderimport/OrderImportServices.xml" invoke="reserveStoreInventoryApprovedOrder">
        <description>Reserve Inventory in a Product Store when order approved</description>
        <attribute name="productStoreId" type="String" mode="IN" optional="false"></attribute>
        <attribute name="productId" type="String" mode="IN" optional="false"></attribute>
        <attribute name="quantity" type="BigDecimal" mode="IN" optional="false"></attribute>
        <attribute name="orderId" type="String" mode="IN" optional="false"></attribute>
        <attribute name="orderItemSeqId" type="String" mode="IN" optional="false"></attribute>
        <attribute name="shipGroupSeqId" type="String" mode="IN" optional="false"></attribute>
        <attribute name="quantityNotReserved" type="BigDecimal" mode="OUT" optional="true"></attribute>
    </service>
    
    <service name="importOrderFromEbayApi" auth="true" engine="java" transaction-timeout="360000"
        location="org.ofbiz.orderimport.OrderImportServices" invoke="importOrderFromEbayApi">
        <description>Import Order from eBay API</description>
        <attribute name="userLogin" type="String" mode="IN" optional="true"/>
        <attribute name="productStoreId" type="String" mode="IN" optional="false"/>
        <attribute name="lastXDays" type="Integer" mode="IN" optional="true"/>
    </service>
    
    <service name="autoImportOrderFromEbayApi" auth="true" engine="java" transaction-timeout="720000"
        location="org.ofbiz.orderimport.OrderImportServices" invoke="autoImportOrderFromEbayApi">
        <description>Auto Import Order from eBay API for all Accounts</description>
        <attribute name="userLogin" type="String" mode="IN" optional="true"/>
    </service>
    
    <service name="setEbayStatusShipped" auth="true" engine="java" transaction-timeout="360000"
        location="org.ofbiz.orderimport.OrderImportServices" invoke="setEbayStatusShipped">
        <description>Set eBay Status Shipped</description>
        <!--<attribute name="userLogin" type="String" mode="IN" optional="true"/>-->
        <attribute name="orderId" type="String" mode="IN" optional="false"/>
    </service>
</services>


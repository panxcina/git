<simple-methods xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/simple-methods.xsd">

    <simple-method method-name="testImportProductsFromDevilwear" short-description="Test import products from Devilwear." login-required="false">
        <entity-one value-field="userLogin" entity-name="UserLogin">
            <field-map field-name="userLoginId" value="system"/>
        </entity-one>
        <set field="importProductsFromDevilwearInMap.userLogin" from-field="userLogin"/>
        <call-service service-name="importProductsFromDevilwear" in-map-name="importProductsFromDevilwearInMap"/>
    </simple-method>

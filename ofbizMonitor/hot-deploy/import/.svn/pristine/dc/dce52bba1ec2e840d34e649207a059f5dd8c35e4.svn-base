    <simple-method method-name="testGetProductInfoFromIceCat" short-description="Test get product information from IceCat." login-required="false">
        <entity-one value-field="userLogin" entity-name="UserLogin">
            <field-map field-name="userLoginId" value="system"/>
        </entity-one>
        <set field="getProductInfoFromIceCatInMap.userLogin" from-field="userLogin"/>
        <set field="getProductInfoFromIceCatInMap.eanUpc" value=""/>
        <set field="getProductInfoFromIceCatInMap.lang" value="en"/>
        <call-service service-name="getProductInfoFromIceCat" in-map-name="getProductInfoFromIceCatInMap">
            <result-to-field result-name="id"/>
            <result-to-field result-name="prodId"/>
            <result-to-field result-name="name"/>
            <result-to-field result-name="title"/>
            <result-to-field result-name="quality"/>
            <result-to-field result-name="releaseDate"/>
            <result-to-field result-name="highPic"/>
            <result-to-field result-name="highPicSize"/>
            <result-to-field result-name="highPicWidth"/>
            <result-to-field result-name="highPicHeight"/>
            <result-to-field result-name="lowPic"/>
            <result-to-field result-name="lowPicSize"/>
            <result-to-field result-name="lowPicWidth"/>
            <result-to-field result-name="lowPicHeight"/>
            <result-to-field result-name="thumbPic"/>
            <result-to-field result-name="thumbPicSize"/>
        </call-service>
        <assert><not><if-empty field="id"></if-empty></not></assert>
        <assert><not><if-empty field="prodId"></if-empty></not></assert>
        <assert><not><if-empty field="name"></if-empty></not></assert>
        <assert><not><if-empty field="title"></if-empty></not></assert>
        <assert><not><if-empty field="quality"></if-empty></not></assert>
        <assert><not><if-empty field="releaseDate"></if-empty></not></assert>
        <assert><not><if-empty field="highPic"></if-empty></not></assert>
        <assert><not><if-empty field="highPicSize"></if-empty></not></assert>
        <assert><not><if-empty field="highPicWidth"></if-empty></not></assert>
        <assert><not><if-empty field="highPicHeight"></if-empty></not></assert>
        <assert><not><if-empty field="lowPic"></if-empty></not></assert>
        <assert><not><if-empty field="lowPicSize"></if-empty></not></assert>
        <assert><not><if-empty field="lowPicWidth"></if-empty></not></assert>
        <assert><not><if-empty field="lowPicHeight"></if-empty></not></assert>
        <assert><not><if-empty field="thumbPic"></if-empty></not></assert>
        <assert><not><if-empty field="thumbPicSize"></if-empty></not></assert>
    </simple-method>
    <simple-method method-name="testGetProductReviewsFromIceCat" short-description="Test get product reviews from IceCat." login-required="false">
        <entity-one value-field="userLogin" entity-name="UserLogin">
            <field-map field-name="userLoginId" value="system"/>
        </entity-one>
        <set field="getProductReviewsFromIceCatInMap.userLogin" from-field="userLogin"/>
        <set field="getProductReviewsFromIceCatInMap.productId" value=""/>
        <set field="getProductReviewsFromIceCatInMap.lang" value=""/>
        <call-service service-name="getProductReviewsFromIceCat" in-map-name="getProductReviewsFromIceCatInMap">
            <result-to-field result-name="reviewList"/>
        </call-service>
        <iterate entry="reviewMap" list="reviewList">
            <log level="info" message="Review: ${reviewMap}"/>
        </iterate>
    </simple-method>
</simple-methods>
